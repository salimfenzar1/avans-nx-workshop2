{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true, // Toevoegen voor ondersteuning van decorators
    "esModuleInterop": true, // Voor betere compatibiliteit met ES Modules
    "allowSyntheticDefaultImports": true, // Maakt het eenvoudiger om ES Modules te importeren
    "target": "es2021"
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}